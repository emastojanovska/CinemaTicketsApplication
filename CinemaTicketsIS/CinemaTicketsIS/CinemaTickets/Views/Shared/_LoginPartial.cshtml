@using Microsoft.AspNetCore.Identity
@inject SignInManager<CinemaTickets.Domain.Identity.CinemaApplicationUser> SignInManager
@inject UserManager<CinemaTickets.Domain.Identity.CinemaApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
            </li>
        }
    </ul>
